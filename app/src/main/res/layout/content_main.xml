<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorWhite"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="maustemies.passprotecter.MainActivity"
    tools:showIn="@layout/activity_main">
    <TextView
        android:id="@+id/textViewInstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryText"
        android:textSize="30sp"
        android:text="@string/textView_instructions"
        android:visibility="gone"/>
    <ListView
        android:id="@+id/listView"
        android:layout_marginTop="20dp"
        android:layout_below="@id/textViewInstructions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/imageViewLogo"
        android:padding="20dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/keys_of_st_peter"/>
    <Button
        android:id="@+id/buttonChooseFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/colorLightBlue"
        android:padding="10dp"
        android:textColor="@color/colorPrimaryText"
        android:text="@string/button_choose_password_file"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/buttonCreateFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="60dp"
        android:layout_below="@id/buttonChooseFile"
        android:background="@color/colorLightGreen"
        android:padding="10dp"
        android:textColor="@color/colorPrimaryText"
        android:text="@string/button_create_password_file"
        android:textSize="20sp"/>
</RelativeLayout>
